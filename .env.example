# ============================================
# VitechCo Process Hub - Environment Variables
# ============================================

# Database
# For production: Use full PostgreSQL connection string from hosting provider
DATABASE_URL="postgresql://postgres:password@localhost:5432/vitechco_hub?schema=public"

# NextAuth.js Configuration
# CRITICAL: Change NEXTAUTH_SECRET in production! Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me-in-production-use-openssl-rand-base64-32"

# Google OAuth (Required for authentication)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Storage Configuration (MinIO/S3)
# For production: Use AWS S3 or compatible object storage
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET="vitechco-assets"
S3_FORCE_PATH_STYLE="true"  # Set to false for AWS S3

# File Upload Limits
FILE_MAX_SIZE_MB=100
ALLOWED_FILE_TYPES="pdf,docx,xlsx,jpg,png,webp"

# Application Settings
NODE_ENV="development"  # production | development | test
APP_VERSION="1.0.0"

# Optional: Monitoring & Error Tracking
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
# SENTRY_ENVIRONMENT="production"

# Optional: Email Service (for notifications)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM="noreply@vitechco.com"

# Optional: Redis (for caching & rate limiting)
# REDIS_URL="redis://localhost:6379"

# Optional: Analytics
# NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# ============================================
# Development Only
# ============================================
# Disable telemetry
NEXT_TELEMETRY_DISABLED=1
